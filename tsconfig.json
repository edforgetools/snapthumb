{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "vite/client"
    ],
    "noEmit": true
  },
  "include": [
    "src",
    "index.html",
    "vite.config.*",
    "tailwind.config.*",
    "postcss.config.*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/legacy/**"
  ]
}